# Database Configuration (Supabase)
SUPABASE_URL=your_supabase_project_url_here
SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# ElevenLabs Configuration (for advanced voice cloning)
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# AI Video Generation Service (choose one)
# RunwayML
RUNWAYML_API_KEY=your_runwayml_api_key_here
# OR Pika Labs
PIKA_LABS_API_KEY=your_pika_labs_api_key_here
# OR Stable Video Diffusion
STABLE_VIDEO_API_KEY=your_stable_video_api_key_here

# JWT Configuration
JWT_SECRET=your_jwt_secret_here_make_it_long_and_random
JWT_EXPIRES_IN=7d

# Session Configuration
SESSION_SECRET=your_session_secret_here_make_it_long_and_random

# Server Configuration
PORT=5001
NODE_ENV=development

# Frontend URL
FRONTEND_URL=http://localhost:3000

# File Storage (Supabase Storage bucket names)
STORAGE_BUCKET_NAME=reelmate-storage
AUDIO_BUCKET_NAME=audio-files
VIDEO_BUCKET_NAME=video-files

# Optional: Email Service (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password_here

# Security
BCRYPT_SALT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Password Reset
PASSWORD_RESET_EXPIRY_HOURS=1
PASSWORD_RESET_URL=http://localhost:3000/auth/reset-password

# Optional: Twilio for SMS (if implementing SMS notifications)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=your-twilio-phone-number

# OAuth Configuration
# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:5001/api/auth/google/callback

# Apple OAuth
APPLE_CLIENT_ID=your-apple-client-id
APPLE_TEAM_ID=your-apple-team-id
APPLE_KEY_ID=your-apple-key-id
APPLE_PRIVATE_KEY_PATH=path/to/your/apple/private/key.p8
APPLE_CALLBACK_URL=http://localhost:5001/api/auth/apple/callback
